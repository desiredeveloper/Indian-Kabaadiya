    <!-- Header -->
    <header id="top" class="header">
        <div class="text-vertical-center">
            <h1>The Indian Kabadiya</h1>
            <h3>
                <i>Register your request &amp; help us clean the city !</i>
            </h3>
            <h3>Helpline:
                <mark>+91-7417013141</mark>
            </h3>
            <br>
            <button class="btn btn-dark btn-lg" data-toggle="modal" data-target="#ratelist">View Rate List</button>
            <button class="btn btn-danger btn-lg" data-toggle="modal" data-target="#register">BECH DE !</button>

        </div>
    </header>

    <!-- Modals -->

    <!-- Ratelist modal-->
    <div class="modal fade" id="ratelist">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title">Rate List</h3>
                    <h5>Get the best prices at your doorsteps</h5>
                </div>

                <div class="modal-body">
                    <table class="table table-striped" id="tblGrid">
                        <thead id="tblHead">
                            <tr>
                                <th>Material</th>
                                <th>Price per</th>
                                <th class="text-right">Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<data.rates.length; i++) {%>
                                <tr>
                                    <td><%= data.rates[i].material %></td>
                                    <td><%= data.rates[i].price %></td>
                                    <td class="text-right"><%= data.rates[i].rate %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Registration modal-->
    <div class="modal fade" id="register" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="padding:35px 50px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>
                        <span class="glyphicon glyphicon-lock"></span> Register</h3>
                    <h5>Just enter the following details and find us at your doorsteps !</h5>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    <form action="/save-order" method="POST" onsubmit="$('#register').modal('hide');$('#thanks').modal('show');">
                        <div class="form-group">
                            <label for="name">
                                <span class="glyphicon glyphicon-user"></span> Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="address">
                                <span class="glyphicon glyphicon-home"></span> Address</label>
                            <input type="text" class="form-control" id="address" placeholder="Enter address" name="address">
                        </div>
                        <div class="form-group">
                            <label for="mobile">
                                <span class="glyphicon glyphicon-phone"></span> Contact No.</label>
                            <input type="text" class="form-control" id="mobile" placeholder="mobile number" name="mobile_no">
                        </div>
                        <div class="form-group">
                            <label for="material">
                                <span class="glyphicon glyphicon-list-alt"></span> Material</label>

                            <div class="select-wrapper">
                                <select name="category" id="category" class="form-control">
                                    <option value="">- Category -</option>
                                    <option value="Newspaper">Newspaper</option>
                                    <option value="Iron">Iron</option>
                                    <option value="Books">Books &amp; Magazines</option>
                                    <option value="Steel">Steel</option>
                                    <option value="Plastics">Plastics</option>
                                    <option value="Aluminium">Aluminium</option>
                                    <option value="Tins">Tins</option>
                                    <option value="Brass">Brass</option>
                                    <option value="Copper">Copper</option>
                                    <option value="Plastic Jars">Plastic Jars</option>
                                    <option value="Cartons">Cartons</option>
                                    <option value="Others">Others</option>
                                </select>
                            </div>
                            <input type="text" class="form-control" id="quantity" placeholder="Enter the quantity of Material e.g. 10 kg" name="quantity">


                        </div>
                        <button type="submit" class="btn btn-success btn-block">
                            <span class="glyphicon glyphicon-off"></span> Register</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove"></span> Cancel</button>
                </div>
            </div>

        </div>
    </div>
    </div>


    <!-- Thanks modal-->

    <div class="modal fade" id="thanks">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title">
                        <span class="glyphicon glyphicon-ok-sign"></span> Thank You !</h3>
                    <h5>Your request has been successfully submitted &amp; you will soon recieve a call for confirmation</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- offer modal-->

    <!-- Modal -->
    <div class="modal fade" id="offer" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Ã—</button>
                    <h3>
                        <span class="glyphicon glyphicon-shopping-cart"></span> Today's Offer</h3>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <div class="form-group">
                            <label for="psw">-Avail the offers using the *Promo Code*</label>
                            <br>
                            <label for="psw">-Tell the *Promo Code* to receiptor</label>
                        </div>
                        <div id="code">
                            <p>Your Promo Code is
                                <label>
                                    <mark>round_OFF</mark>
                                </label>
                            </p>
                        </div>
                        <button type="button" id="offer" class="btn btn-block">Get Code
                            <span class="glyphicon glyphicon-ok"></span>
                        </button>
                    </form>
                </div>
                <div class="modal-footer">
                    <label for="psw">Terms &amp; Conditions apply !</label>
                    <br>
                    <label for="psw">*Offers are valid on daily basis</label>

                </div>
            </div>
        </div>
    </div>
    </div>



    <!-- About -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>"The Indian Kabadiya" is an online project to support</h2>
                    <p class="lead">
                        <small>SWACCHA BHARAT ABHIYAN</small>, an initiative by
                        <a target="_blank" href="http://swachhbharatmission.gov.in">Indian Govt.</a>
                    </p>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>


    <!-- Vision -->-
    <section id="services" class="services">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-10 col-lg-offset-1">
                    <h2>Why Us ?</h2>
                    <hr class="small">
                    <div class="row">
                        <div class="col-md-4 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x fa fa-calendar-o">
                                </span>
                                <h4>
                                    Pick up as per your convenient Date and Time
                                </h4>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x fa fa-check-square-o">
                                </span>
                                <h4>
                                    Assurance of accurate weight by Digital Scale
                                </h4>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x fa fa-rupee">
                                </span>
                                <h4>
                                    Get Hard-Cash for waste at your doorsteps
                                </h4>
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
        <!-- Carousel -->

        <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <% for(var i=0; i<data.phrases.length; i++) {%>
                    <% var active = i == 0 ? " active" : "";%>
                    <div class="item<%= active %>">
                        <h4>"
                            <%= data.phrases[i].phrase %>"
                                <br>
                                <span style="font-style:normal;">
                                    <%= data.phrases[i].author %>
                                </span>
                        </h4>
                    </div>
                <% } %>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        </div>

    </section>


